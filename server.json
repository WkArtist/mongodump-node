{
    "apps":[{
  
      "name"        : "mongodump-node", 
      "script"      : "app.js", 
      "cwd"         : "./", 
      "watch": false,
      "ignore_watch" : [ 
        "node_modules"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "instances"  : 1,
      "error_file" : "./logs/app-err.log", 
      "out_file"   : "./logs/app-out.log", 
      "merge_logs": true,
      "env": {
          "NODE_ENV": "production" 
      }
    }]
  }